ifndef TOPDIR
		TOPDIR = $(abspath ../../../)
endif

include $(TOPDIR)/make_config/Rules.mk
include $(TOPDIR)/make_config/color_rules.mk

SRCS = edit_map_bonus.c \
		map_utils_bonus.c \
		draw_map_bonus.c \
		draw_utils_bonus.c \
		draw_mod_bonus.c \
		draw_bonus.c 

NAME = draw_bonus.a

CPPFLAGS = -I$(TOPDIR)/includes -I../includes
LDFLAGS = -L$(TOPDIR)/lib

OBJS = $(SRCS:.c=.o)
DEPS = $(SRCS:.c=.d)
-include $(DEPS)

all bonus : 
	$(Q)$(call color_printf,$(CYAN),$(NAME),üéØ starting compile $(NAME))
	$(Q)$(MAKE) $(NAME)
	$(Q)$(call color_printf,$(GREEN),$(NAME),üî∞ done!)

$(NAME): $(OBJS)
	$(Q)$(call color_printf,$(GREEN),$(NAME),üìö archive object)
	$(AR) $(ARFLAGS) $@ $^
	$(Q)$(MAKE) files="$(NAME)" src_dir=`pwd` dst_dir=$(TOPDIR)/src/src_b/lib link_files
	
clean:
	$(Q)$(MAKE) files="$(NAME)" src_dir=`pwd` dst_dir=$(TOPDIR)/src/src_b/lib unlink_files
	$(Q)$(call color_printf,$(RED),$(NAME),üóëÔ∏è  remove Objects && Dependency file)
	$(RM) $(OBJS) $(DEPS)

fclean: clean
		$(Q)$(call color_printf,$(RED),$(NAME),üóëÔ∏è  remove $(NAME))
		$(RM) $(NAME)
	
re : fclean
	$(MAKE) all

.PHONY: all clean fclean re bonus